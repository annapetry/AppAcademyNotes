<% action_url = @cat.persisted? ? cats_url(@cat) : cats_url %>
<% method = @cat.persisted? ? "PATCH" : "POST" %>
<% submit_text = @cat.persisted? ? "Update Cat!" : "Add Cat!" %>


<form method="POST" action="<%= action_url %>">
  <input type="hidden" name="_method" value="%= method %>">

  <label for="cat_name">Name</label>
  <input type="text"
         name="cat[name]"
         value="<%= @cat.name %>"
         id="cat_name">
  <br>
  
  <label for="cat_birth_date">Birth Date</label>
  <input type="date"
         name="cat[birth_date]"
         value="<%= @cat.birth_date %>"
         id="cat_birth_date">
  <br>  
         
  <label for="cat_age">Age</label>
  <input type="integer"
         name="cat[age]"
         value="<%= @cat.age %>"
         id="cat_age">
  <br>
         
  <label for="cat_color">Color</label>
  <select name="cat[color]" id="cat_color">
      <option value="<blank>">
      <% Cat::COLORS.each do |color| %>
          <option value="<%= color %>"
            <%= "selected" if @cat.color == color %>>
            <%= color %>
          </option>
      <% end %>
  </select>
  <br>
      
  <label for="cat_sex_female">Female</label>
  <input type="radio"
         name="cat[sex]"
         id="cat_sex_female"
         value="F" <%= "checked" if @cat.sex == "F" %>>
  <label for="cat_sex_male">Male</label>
  <input type="radio"
        name="cat[sex]"
        id="cat_sex_male"
        value="M" <%= "checked" if @cat.sex == "M" %>>
  <br>
      
  <label for="cat_description">Description</label>
  <textarea
         name="cat[description]"
         id="cat_description"
         value="<%= @cat.description %>"></textarea>
  <br>
  
  <input type="submit" value="<%= submit_text %>">  
</form>