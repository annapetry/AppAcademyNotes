<form method="POST" action="<%= cat_rental_requests_url%>">
  <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
  
  <% @rental_request.cat = Cat.find(params[:cat_id]) if params[:cat_id] %>
 
  <label for="cat">Choose a Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat">
    <option value=""></option>
    <% Cat.all.each do |cat| %>
        <option value="<%= cat.id %>"
          <%= "selected" if @rental_request.cat == cat %>>
          <%= cat.name %>
        </option>
    <% end %>
  </select>
  <br>

  <label for="rental_start_date">Start Date</label>
  <input type="date"
         name="cat_rental_request[start_date]"
         value="<%= @rental_request.start_date %>"
         id="rental_start_date">
  <br>
         
  <label for="rental_end_date">End Date</label>
  <input type="date"
         name="cat_rental_request[end_date]"
         value="<%= @rental_request.end_date %>"
         id="rental_end_date">
  <br>
  
  <input type="submit" value="Rent a cat today!">
</form>

