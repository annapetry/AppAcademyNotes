<h2><%= @album.name %></h2>

<p>Album Version: <%= @album.version.capitalize %></p>


<label><%= @album.name %>'s Tracks</label>
<% @album.tracks.each do |track| %>
  <%= link_to "#{track.name}", track_url(track), :method => :get %>
  <br>
<% end %>
<br>
<%= button_to "Add a Track", new_album_track_url(@album), :method => :get %>
<br>
<%= button_to "Edit #{@album.name}'s Info", edit_album_url(@album),
      :method => :get%>
<br>
<%= button_to "Delete #{@album.name}", album_url(@album), :method => :delete %>
<br>
<%= link_to "Back to #{@album.band.name}", band_url(@album.band), :method => :get %>

